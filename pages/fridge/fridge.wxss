/* pages/fridge/fridge.wxss */
.container { padding: 20rpx; }
.title { font-size: 32rpx; font-weight: bold; margin-bottom: 20rpx; }
.button-group { display: flex; justify-content: space-between; margin-bottom: 20rpx; }
.primary, .secondary {
  flex: 1;
  padding: 20rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
}
.primary { background: #07c160; color: white; }
.secondary { background: #f5f5f5; color: #333; }
.recommend-btn { /* 新增：自定义推荐按钮颜色 */
  background: #4346ff !important;
}
.subtitle { font-size: 28rpx; font-weight: bold; margin: 20rpx 0 10rpx; }
.tag-list { display: flex; flex-wrap: wrap; }
.tag-item {
  background: #eeeeee;
  margin: 5rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  position: relative;
}
.del {
  color: red;
  margin-left: 10rpx;
}